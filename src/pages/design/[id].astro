---
import { designs } from "../../helpers/constants";
import prevIcon from '../../assets/misc/prev.svg';
import closeIcon from '../../assets/misc/close_design.svg';
import nextIcon from '../../assets/misc/next.svg';
import { prevNext } from '../../helpers/utils';
import Link from "../../components/link.astro";
const { id } = Astro.params;
const current = designs[id] ||Â Astro.props;
console.log('<fff>', `id: `, id);
const [prevUrl, nextUrl] = prevNext(designs, id).map(id => `/design/${id}`);
---
<style>
  .wrapper {
    box-shadow: rgb(199, 217, 129) 0px 0px 0px 8px inset;
    background: rgb(222, 231, 201);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    transition: all 0.2s ease-in-out 0s;
    width: 100%;
    height: 100vh;
    left: 0px;
    top: 0px;
    text-align: center;
    padding: 20px 20px 40px 20px;
    gap: 12px;
    justify-content: space-between;

    h2 {
      font-size: 24px;
      font-weight: 600;
      color: rgb(199, 217, 129);
    }

    p {
      font-size: 20px;
      color: lightslategray;
      font-weight: 200;
    }

    .img-wrapper {
      max-height: 80vh;
      display: flex;
      justify-content: center;
    }


    .buttons-wrapper {
      display: flex;
      width: 100%;
      justify-content: space-between;

      a {
        color: white;
        background: rgb(16, 39, 51);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 43px;
        width: 56px;
        cursor: pointer;
      }
    }

    .close {
      position: absolute;
      right: 8px;
      top: 12px;
      padding: 8px 12px;
      cursor: pointer;
    }
  }
</style>

<div class="wrapper">
      <button class="close">
        <Link url={'/design'}>
          <img src={closeIcon.src} alt="close" />
        </Link>
      </button>

    <div>
      <h2>{current.client}</h2>
      <p>{current.title}</p>
    </div>

    <div class="img-wrapper">
      <img src={current.src.src} alt={current.title} />
    </div>
      
    <div class="buttons-wrapper">
      <!-- <img src={prevIcon.src} alt="prev" />
      <img src={nextIcon.src} alt="prev" /> -->
      <Link url={prevUrl}>
        <img src={prevIcon.src} alt="prev" />
      </Link>
      <Link url={nextUrl}>
        <img src={nextIcon.src} alt="prev" />
      </Link>
    </div>
</div>
